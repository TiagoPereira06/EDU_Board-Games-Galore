<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/list_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp"
    android:clipToPadding="false"
    android:padding="20dp"
    app:cardBackgroundColor="@color/colorAccent"
    app:cardCornerRadius="15dp"
    app:cardElevation="5dp"
    app:cardMaxElevation="5dp">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/profileName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:fontFamily="@font/biryani_bold"
            android:gravity="center"
            android:text="This is a profile name"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            app:layout_constraintBottom_toBottomOf="@+id/thumbProfile"
            app:layout_constraintStart_toEndOf="@+id/thumbProfile"
            app:layout_constraintTop_toTopOf="@+id/thumbProfile" />

        <ImageView
            android:id="@+id/thumbProfile"
            android:layout_width="55dp"
            android:layout_height="55dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/samplegameicons33">

        </ImageView>

        <com.google.android.material.chip.Chip
            android:id="@+id/categoryChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/colorPrimary"
            android:buttonTint="@color/colorPrimary"
            android:checkable="true"
            android:checked="false"
            android:clickable="false"
            android:fontFamily="@font/biryani"
            android:text="Abstract"
            android:textColor="@color/colorText"
            android:visibility="visible"
            app:checkedIconVisible="true"
            app:chipIconTint="@color/colorPrimary"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/thumbProfile" />

        <com.google.android.material.chip.Chip
            android:id="@+id/mechanicChip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:buttonTint="@color/colorPrimary"
            android:checkable="true"
            android:checked="false"
            android:clickable="false"
            android:fontFamily="@font/biryani"
            android:text="Betting"
            android:textColor="@color/colorText"
            android:visibility="visible"
            app:checkedIconVisible="true"
            app:chipIconTint="@color/colorPrimary"
            app:layout_constraintStart_toEndOf="@+id/categoryChip"
            app:layout_constraintTop_toBottomOf="@+id/thumbProfile" />

        <TextView
            android:id="@+id/artistNameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/biryani"
            android:gravity="center"
            android:text="Artist : John Malkovich"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mechanicChip"
            app:layout_constraintVertical_bias="0.0" />

        <TextView
            android:id="@+id/publisherNameProfile"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="8dp"
            android:fontFamily="@font/biryani"
            android:gravity="center"
            android:text="Publisher : Artic Games"
            android:textAlignment="center"
            android:textColor="@color/colorText"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categoryChip"
            app:layout_constraintVertical_bias="0.0" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>