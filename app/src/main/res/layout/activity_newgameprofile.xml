<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorBackground"
        android:orientation="vertical">

        <com.google.android.material.chip.Chip
            android:id="@+id/categorychip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/colorPrimary"
            android:buttonTint="@color/colorPrimary"
            android:checkable="true"
            android:checked="false"
            android:clickable="false"
            android:fontFamily="@font/biryani"
            android:textColor="@color/colorText"
            android:visibility="invisible"
            app:checkedIconVisible="false"
            app:chipIconTint="@color/colorPrimary"
            app:closeIconVisible="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView" />

        <ImageView
            android:id="@+id/linkIcon3"
            android:layout_width="19dp"
            android:layout_height="14dp"
            android:contentDescription="linkIcon"
            app:layout_constraintBottom_toBottomOf="@+id/mecButton"
            app:layout_constraintStart_toEndOf="@+id/mecButton"
            app:layout_constraintTop_toTopOf="@+id/mecButton"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/link" />

        <com.google.android.material.chip.Chip
            android:id="@+id/mechanicchip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:backgroundTint="@color/colorPrimaryDark"
            android:buttonTint="@color/colorPrimary"
            android:checkable="true"
            android:checked="false"
            android:clickable="false"
            android:fontFamily="@font/biryani"
            android:textColor="@color/colorText"
            android:visibility="invisible"
            app:checkedIconVisible="false"
            app:chipIconTint="@color/colorPrimary"
            app:closeIconVisible="true"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView2" />

        <ImageView
            android:id="@+id/profileThumb"
            android:layout_width="125dp"
            android:layout_height="125dp"
            android:layout_marginTop="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/samplegameicons33" />

        <EditText
            android:id="@+id/designerName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@color/colorText"
            android:ems="10"
            android:fontFamily="@font/biryani"
            android:hint="Designer Name"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorText"
            android:textCursorDrawable="@color/colorText"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView4" />

        <ImageView
            android:id="@+id/linkIcon2"
            android:layout_width="19dp"
            android:layout_height="14dp"
            android:contentDescription="linkIcon"
            app:layout_constraintBottom_toBottomOf="@+id/catButton"
            app:layout_constraintStart_toEndOf="@+id/catButton"
            app:layout_constraintTop_toTopOf="@+id/catButton"
            app:layout_constraintVertical_bias="1.0"
            app:srcCompat="@drawable/link" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/biryani"
            android:text="Choose Publisher"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView3"
            app:layout_constraintStart_toEndOf="@+id/imageView3"
            app:layout_constraintTop_toTopOf="@+id/imageView3" />

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/publishername"
            app:srcCompat="@drawable/favouriteprofilerbrush"
            tools:srcCompat="@drawable/favouriteprofilerbrush" />

        <TextView
            android:id="@+id/textView6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:fontFamily="@font/biryani"
            android:text="Choose Designer"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView4"
            app:layout_constraintStart_toEndOf="@+id/imageView4"
            app:layout_constraintTop_toTopOf="@+id/imageView4"
            app:layout_constraintVertical_bias="0.523" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="34dp"
            android:fontFamily="@font/biryani_bold"
            android:gravity="center"
            android:text="Let's get more specific?"
            android:textAlignment="center"
            android:textColor="@color/colorPrimary"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/mechanicchip" />

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="25dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView4"
            app:srcCompat="@drawable/favouriteprofilerfactory"
            tools:srcCompat="@drawable/favouriteprofilerfactory" />

        <EditText
            android:id="@+id/publishername"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="12dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/colorText"
            android:ems="10"
            android:fontFamily="@font/biryani"
            android:hint="Publisher Name"
            android:inputType="textPersonName"
            android:singleLine="true"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorText"
            android:textCursorDrawable="@color/colorText"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        <EditText
            android:id="@+id/profileName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:backgroundTint="@color/colorText"
            android:ems="10"
            android:fontFamily="@font/biryani"
            android:hint="Profile Name"
            android:inputType="textPersonName"
            android:maxLength="15"
            android:singleLine="true"
            android:textColor="@color/colorText"
            android:textColorHint="@color/colorText"
            android:textCursorDrawable="@color/colorText"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.0"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileThumb" />

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="64dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/categorychip"
            app:srcCompat="@drawable/favouriteprofilermechanic"
            tools:srcCompat="@drawable/favouriteprofilermechanic" />

        <TextView
            android:id="@+id/mecButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/biryani"
            android:text="Choose Mechanic"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="@+id/imageView2"
            app:layout_constraintVertical_bias="0.545" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="90dp"
            android:layout_marginTop="52dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/profileName"
            app:srcCompat="@drawable/favouriteprofilercat"
            tools:srcCompat="@drawable/favouriteprofilercat" />

        <TextView
            android:id="@+id/catButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:fontFamily="@font/biryani"
            android:text="Choose Category"
            android:textColor="@color/colorText"
            android:textSize="16sp"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintStart_toEndOf="@+id/imageView"
            app:layout_constraintTop_toTopOf="@+id/imageView"
            app:layout_constraintVertical_bias="0.5" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>