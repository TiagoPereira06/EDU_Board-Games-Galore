<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.isel.pdm.beegeesapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".BggApplication"
        android:allowBackup="true"
        android:icon="@mipmap/beegees_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/beegees_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">

        <activity android:name=".bgg.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".bgg.about.AboutActivity"/>
        <activity android:name=".bgg.GameDetailedViewActivity" />
        <activity android:name=".bgg.search.SearchActivity" />
        <activity android:name=".bgg.favourites.FavouritesActivity" />
        <activity android:name=".bgg.trending.TrendingActivity" />
        <activity android:name=".bgg.userlists.UserListsActivity" />
        <activity android:name=".bgg.userlists.detaileduserlists.ListDetailedViewActivity" />
        <activity android:name=".bgg.chooselisttoadd.ChooseListToAddGameActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />

    </application>
</manifest>