<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="edu.isel.pdm.beegeesapp">

    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <application
        android:name=".BggApplication"
        android:allowBackup="true"
        android:usesCleartextTraffic="true"
        android:icon="@mipmap/beegees_icon"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/beegees_icon_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".bgg.dashboard.DashboardActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="edu.isel.pdm.beegeesapp.bgg.about.AboutActivity" />
        <activity android:name="edu.isel.pdm.beegeesapp.bgg.games.GamesActivity" />
        <activity android:name="edu.isel.pdm.beegeesapp.bgg.games.ui.GamesWithPagination" />
        <activity android:name="edu.isel.pdm.beegeesapp.bgg.games.ui.GamesWithPaginationAndMenu" />
        <activity android:name="edu.isel.pdm.beegeesapp.bgg.games.ui.GameDetailedViewActivity" />
        <activity android:name="edu.isel.pdm.beegeesapp.bgg.userLists.ui.UserLists" />
        <activity android:name="edu.isel.pdm.beegeesapp.bgg.userLists.ui.AddGameToCollection" />
        <activity android:name="edu.isel.pdm.beegeesapp.bgg.userLists.ui.ListDetailedViewActivity" />
        <activity android:name="edu.isel.pdm.beegeesapp.bgg.favorites.ui.FavouritesActivity" />
        <activity android:name="edu.isel.pdm.beegeesapp.bgg.favorites.ui.NewGameProfileActivity" />
        <activity android:name="edu.isel.pdm.beegeesapp.bgg.favorites.ui.ProfileGameActivity" />
        <activity android:name="edu.isel.pdm.beegeesapp.bgg.NotificationSettingsActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>
</manifest>